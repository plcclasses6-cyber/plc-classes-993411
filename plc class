<script>
  function saveEnroll(e){
    e.preventDefault();
    const name=document.getElementById('name').value.trim();
    const cls=document.getElementById('cls').value;
    const mob=document.getElementById('mob').value.trim();
    const note=document.getElementById('note').value.trim();
    if(!name||!cls||!mob){ show('Please fill all required fields.', true); return false; }
    const key='plc_enrollments';
    const arr=JSON.parse(localStorage.getItem(key)||'[]');
    arr.push({id:Date.now(),name,cls,mob,note});
    localStorage.setItem(key,JSON.stringify(arr));
    show('✅ Enrollment saved (local). Please pay ₹100 via QR/UPI and confirm on WhatsApp.', false);
    e.target.reset(); return false;
  }
  function show(t,err){
    const m=document.getElementById('msg'); m.style.display='block';
    m.className='msg '+(err?'bad':'good'); m.textContent=t;
  }
</script>
